  <!DOCTYPE html>
<html>
<head>
  <title>Dtechbots</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<div class="navbar navbar-fixed-top">  
  <div class="navbar-inner">  
    <div class="container">  
      <ul class="nav nav-pills nav-stacked">  

        <% if current_admin %>
              <li><%=link_to "Home",admins_path,class:"glyphicon glyphicon-home"%></li>
              <li><%=link_to "Dashboard",{:controller=>"home",:action=>"index"},class:"glyphicon glyphicon-dashboard"%></li>
              <li><%=link_to "Inventory", inventories_path,class:"glyphicon glyphicon-gift" %>  </li>  
              <li><%=link_to "Orders",orders_path,class:"glyphicon glyphicon-shopping-cart" %>  </li>
           

            <ul class="nav">  
              <li class="dropdown">  
                <a href="#"  
                      class="dropdown-toggle"  
                      data-toggle="dropdown">  
                        <span class="glyphicon glyphicon-user"><%=current_admin.username%></span>     
                      <b class="caret"></b>  
                </a>  
                <ul class="dropdown-menu">  
                    <li><%=link_to " Logout ", logout_path,class:"glyphicon glyphicon-off" %>  </li>

           

                </ul>  
              </li>  
           </ul> 
        <% else %>
          <%= link_to "Sign Up", signup_path %> or
          <%= link_to "Log In", login_path %>
        <% end %>
          
  		     
		</ul>  
    </div>  
  </div>  
</div>
 

	<div class="container-fluid">  
  <div class="row-fluid"> 

    <div class="span2" id="sidebar">  
      <!--Sidebar content-->  
       <ul class="nav nav-pills nav-stacked">  
          <% if current_admin %>
 
        		  <li><%=link_to "Home",admins_path,class:"glyphicon glyphicon-home"%></li>    
               <li><%=link_to "Dashboard",{:controller=>"home",:action=>"index"},class:"glyphicon glyphicon-dashboard"%></li>  
               <li><%=link_to "Inventory",inventories_path,class:"glyphicon glyphicon-gift" %>  </li>   
        			 <li><%=link_to "Orders",orders_path,class:"glyphicon glyphicon-shopping-cart" %>  </li>  
               <li><%=link_to "Profile",admin_path(current_admin),class:"glyphicon glyphicon-wrench" %>  </li> 
           
               <li><%=link_to "Members",members_path,class:"glyphicon glyphicon-user" %>  </li> 
               <li><%=link_to "Admins", "",class:"glyphicon glyphicon-user" %>  </li>   
          <%end%>
		</ul>  
 
    </div>  
    <div class="span10" id="mainBody">  
    	<%= yield %>
      <!--Body content-->  
      <footer id="footer">
        @Simi Tresa Antony 2014</footer>
    </div>  
  </div>  
</div>  
  

</body>
</html>
