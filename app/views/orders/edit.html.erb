

<div class="page-header">
  <h3>Modify Orders</h3>
</div>




<%= form_for @order, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :bk_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bk_name, :class => 'text_field' %>
    </div>
  </div>

   <div class="control-group">
    <%= f.label :bk_qty, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bk_qty, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :order_status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :order_status, ['CLOSED', 'OPEN', 'In Progress'], :prompt => 'Select One' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn' %>
  </div>
<% end %>
