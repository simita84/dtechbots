				 						<span class="badge badge-warning">
				 					<%else%>
				 					    <span class="badge badge-important">
				 				<%end %>
				 								
						 				<%=order.order_status%>		
				 				       </span>
				 					
				 			</td>
				 			
				 			<td><%=order.created_at.strftime("%m/%d/%Y %I:%M%p")%></td>
				 			<td><%=order.updated_at.strftime("%m/%d/%Y %I:%M%p")%></td>
				 		
				 		</tr>
				 	</tbody>
 		
				<%end%>
