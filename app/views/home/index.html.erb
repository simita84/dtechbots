<div class="container" id="dashboard" >  
	
		<div class="row" > 

			<div class="span8" id="dash1">

				<h3 class="leftMargin"> Recent  Orders</h3>

				<table class="table">

				 	<thead>
				 		<tr>
				 			<th>Book Name</th>
				 			<th>Quantity</th>
				 			<th>Order Status</th>
				 			<th>Created(UTC)</th>
				 			<th>Last modified(UTC)</th>

				 		</tr>
				 	</thead>
				<% @orders.each do |order| %>

				 	<tbody>
				 		<tr>
				 			<td><%=order.bk_name%></td>
				 			<td><%=order.bk_qty%></td>
				 			<td>


