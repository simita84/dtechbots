 

 <div class="page-header">
 	<h3>Manage Members</h3>
 </div>

<div class="pagination">
	<%= will_paginate @members, renderer: BootstrapPagination::Rails %>
</div>

 <table class="table table-striped">

 	<thead>
 		<tr>
 			<th>First Name</th>
 			<th>Last Name</th>
 			<th>Username</th>
 			<th>Created(UTC)</th>
 			<th>Modified(UTC)</th>
 			<th> Actions</th>

 		</tr>
 	</thead>



<% @members.each do |member| %>

 	<tbody>
 		<tr>
 			<td><%=member.first_name%></td>
 			<td><%=member.last_name%></td>
 			<td><%=member.username%></td>
 			<td><%=member.created_at.strftime("%m/%d/%Y %I:%M%p")%></td>
 			<td><%=member.updated_at.strftime("%m/%d/%Y %I:%M%p")%></td>
 			<td><%=link_to "Modify",members_edit_path,class:"btn"%>
 				<%=link_to "Delete",members_index_path(member), :method => 'delete',
              								:data => { :confirm => t('.confirm', 
              								:default => t("helpers.links.confirm", 
              							    :default => 'Are you sure?')) },
              								:class => 'btn btn-danger'%>
 			</td>

 		 
             

 		
 		</tr>
 	</tbody>

 <%end%>
 </table>


<%= link_to t('.new', :default => t("helpers.links.new")),
            members_new_path,:class => 'btn btn-primary' %>



