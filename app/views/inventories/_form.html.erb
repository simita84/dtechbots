<%= form_for @inventory, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :bk_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :bk_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bk_qty, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bk_qty, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :bk_price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :bk_price, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                inventories_path, :class => 'btn' %>
  </div>
<% end %>
